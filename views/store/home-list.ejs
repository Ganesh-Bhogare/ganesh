            <div class="card-image">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>">
            </div>
            <div class="card-content">
              <div class="card-header">
                <div>
                  <h3 class="home-name">
                    <%= home.houseName %>
                  </h3>
                  <div class="home-location">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>
                      <%= home.location %>
                    </span>
                  </div>
                </div>
                <div class="home-price">Rs <%= home.price %><span class="price-period">/night</span></div>
              </div>

              <div class="home-meta">
                <div class="meta-item">
                  <i class="fas fa-bed meta-icon"></i>
                  <span class="meta-label">Beds</span>
                  <span class="meta-value">
                    <%= home.beds || 'N/A' %>
                  </span>
                </div>
                <div class="meta-item">
                  <i class="fas fa-bath meta-icon"></i>
                  <span class="meta-label">Baths</span>
                  <span class="meta-value">
                    <%= home.baths || 'N/A' %>
                  </span>
                </div>
                <div class="meta-item">
                  <i class="fas fa-ruler-combined meta-icon"></i>
