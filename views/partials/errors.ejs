<% if (errors && errors.length> 0) { %>
    <div style="background-color: #fed7d7; border: 1px solid #f56565; color: #c53030; padding: 12px; border-radius: 5px; margin-bottom: 16px; position: relative;"
        role="alert">
        <strong style="font-weight: bold;">Error!</strong>
        <ul style="margin-top: 8px; padding-left: 20px;">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error %>
                </li>
                <% }) %>
        </ul>
        <span style="position: absolute; top: 0; bottom: 0; right: 0; padding: 12px; cursor: pointer;">
            <i class="fas fa-times"></i>
        </span>
    </div>
    <% } %>